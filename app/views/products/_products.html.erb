 <div class="container">
            <% @products.each do |product| %>
            
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="row justify-content-md-center">
                        <div class="col-md-4 my-auto">
                            <img class="img-fluid" src="https://cdn.britannica.com/22/75922-050-D3982BD0/flowers-fruits-garden-strawberry-plant-species.jpg" alt="">
                        </div>
                        <div class="col-6 mt-4">
                            <div class="card-header font-italic">
                                <b>Price: </b>$<%=product.price%> 
                            </div>
                            <div class="card-body">
                                <h5 class="card-title"><%= link_to product.name, product_path(product), class: 'text-success'%></h5>
                                <p class="card-text"><b>Price: </b>$<%=product.price%></p>

                                <a href="<%=product_path(product) %>" class="btn btn-outline-info ">Product Details</a>
                            </div>
                            <div class="card-footer text-muted">
                                <small>
                                    Created <%= time_ago_in_words(product.created_at)%> ago,
                                    Edited <%= time_ago_in_words(product.updated_at)%> ago
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

            <% end -%>
    </div>
