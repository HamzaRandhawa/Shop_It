 <div class="container">
        <div class="row justify-content-md-center">
            <% @products.each do |product| %>
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header font-italic">
                            <b>Price: </b>$<%=product.price%> 
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to product.name, product_path(product), class: 'text-success'%></h5>
                            <p class="card-text"><b>Price: </b>$<%=product.price%></p>

                            <a href="<%=product_path(product) %>" class="btn btn-outline-success ">Product Details</a>
                        
                        </div>
                        <div class="card-footer text-muted">
                            <small>
                                Created <%= time_ago_in_words(product.created_at)%> ago,
                                Edited <%= time_ago_in_words(product.updated_at)%> ago
                            </small>
                        </div>
                    </div>
                </div>
            <% end -%>
        </div>
    </div>
