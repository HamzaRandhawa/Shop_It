<%= render 'layouts/navigation'%>

<div class="container d-flex justify-content-center align-items-center mt-3">
    <div class="row">
        <div class="col-sm-6 col-md-7 offset-md-3">

            <div class="card shadow">
                <img src="http://n.sinaimg.cn/translate/w580h330/20180123/Al5K-fyqwiqi7466783.jpg" alt="" height="80%" class="card-img-top" />
                <div class="card-body">
                    <h3 class="card-title text-center">Shipment</h3>

                    <%= form_for(@order, class:"validfated-form") do |f| %>
                        <div class="mb-2">
                            <%= f.label :name, class: "form-label" %>
                            <%= f.text_field :name, class: "form-control shadow rounded", required: true, autofocus: true %>
                        </div>
                        <div class="mb-2">
                            <%= f.label :email, class: "form-label" %>
                            <%= f.email_field :email,class: "form-control shadow rounded", required: true %>
                        </div>
                        <div class="mb-2">
                            <%= f.label :address, class: "form-label" %>
                            <%= f.text_area :address, class: "form-control shadow rounded", required: true %>
                        </div>
                        <div class="mb-5">
                            <%= f.submit "Ship" ,class: "btn btn-success btn-block" , data: {confirm: "Comfirm Snipment?"}  %>
                        </div>
                    <% end %>
                </div>

            </div>
        </div>
    </div>
</div>
