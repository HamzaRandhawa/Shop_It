<%= render 'layouts/navigation'%>

<div id="page-content">
    <h1 class="text-center my-2">
        <% if current_user.admin? %>
            All Shipments
        <% else %>
            Your Shipments
        <% end %>

    </h1>


    <div class="container content_container">
        <div class="row justify-content-md-center">
  
            <div class="col-md-6 mt-4 ">
                <% @orders.each do |order| %>
                
                    <div class="card text-center shadow mb-5 bg-white rounded">
                
                        <div class="card-header font-italic">
                            <b>Shipped: </b><%= time_ago_in_words(order.created_at)%> ago
                        </div>
                        <div class="card-body">
                            <p class="card-text"><b>Name: </b><%= order.name %></p>
                            <p class="card-text"><b>Email: </b><%= order.email %></p>

                            <ul class="list-group">
                                <li class="list-group-item active">Items</li>
                                <% order.items.each do |item| %>

                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <%= item.product.name %>
                                    <span class="badge bg-primary rounded-pill"><%= item.quantity %></span>
                                </li>
                                
                                <% end %>
                            </ul>
                        </div>
                        <div class="card-footer text-muted">
                            <small>
                                Shipped <%= time_ago_in_words(order.created_at)%> ago,
                            </small>
                        </div>
                    </div>
               
                <% end -%>
            </div>
        </div>
    </div>
</div>
