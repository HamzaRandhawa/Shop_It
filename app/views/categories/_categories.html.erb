 <div class="container">
        <div class="row justify-content-md-center">
            <% @categories.each do |category| %>
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header font-italic">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to category.name, category_path(category), class: 'text-success'%></h5>

                            <a href="<%=category_path(category) %>" class="btn btn-outline-success ">category Details</a>
                        
                        </div>
                        <div class="card-footer text-muted">
                            <small>
                                Created <%= time_ago_in_words(category.created_at)%> ago,
                                Edited <%= time_ago_in_words(category.updated_at)%> ago
                            </small>
                        </div>
                    </div>
                </div>
            <% end -%>
        </div>
    </div>
