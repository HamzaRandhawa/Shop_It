<%= render 'layouts/navigation'%>
<div class="container mt-4">
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center">New Category</h1>

            <%# <form action="/products" method="POST" class="validated-form" enctype="multipart/form-data" novalidate > %>
            <%# <form action="/products" method="POST" class="validated-form" novalidate > %>

            <%= form_with(model: @category, method: 'POST', class:"validfated-form", local: true  )  do |f| -%>

                <div class="mb-3">
                    <%= f.label :name, class: "form-label" -%>

                    <%= f.text_field :name, class: "form-control shadow rounded", placeholder:"Name" -%>

                    <div class="valid-feedback">Looks Good!</div>
                </div>
             
                <div class="mb-3">
                    <%= f.label :description, class: "form-label" -%>

                    <%= f.text_area :description, class: "form-control shadow rounded", placeholder:"Tell About the Product..." -%>
                    
                    <div class="valid-feedback">Looks Good!</div>
                </div>

                <div class="mb-3">
                    <%= f.submit(@category.new_record? ? "Add Category" :"Save Changes", class: "btn btn-success btn-block")-%>
                </div>
            <%# </form> %>
            <% end %>
        </div>
    </div>
</div>
