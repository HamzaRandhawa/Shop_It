<%= render 'layouts/navigation'%>

<div class="container d-flex justify-content-center align-items-center mt-3">
    <div class="row">
        <div class="col-sm-6 col-md-7 offset-md-3">

            <div class="card shadow">
                <img src="https://indaily.com.au/wp-content/uploads/2019/05/Supermarket.jpg" alt="" height="80%" class="card-img-top" />
                <div class="card-body">
                    <h3 class="card-title text-center">New Category</h3>
                    <%= form_with(model: @category, method: 'POST', class:"validfated-form", local: true  )  do |f| -%>
                        <div class="mb-3">
                            <%= f.label :name, class: "form-label" -%>

                            <%= f.text_field :name, class: "form-control shadow rounded", placeholder:"Name" -%>

                            <div class="valid-feedback">Looks Good!</div>
                        </div>
                    
                        <div class="mb-3">
                            <%= f.label :description, class: "form-label" -%>

                            <%= f.text_area :description, class: "form-control shadow rounded", placeholder:"Tell About the Product..." -%>
                            
                            <div class="valid-feedback">Looks Good!</div>
                        </div>

                        <div class="mb-3">
                            <%= f.submit(@category.new_record? ? "Add Category" :"Save Changes", class: "btn btn-success btn-block")-%>
                        </div>
                    <% end %>

                </div>
            </div>
        </div>
    </div>
</div>

