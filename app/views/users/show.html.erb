<%= render 'layouts/navigation'%> 

<div id="page-content">
    <h1 class="text-center mt-1"><%= @user.username %>'s Profile</h1>

    <div class="container content_container mt-3">

        
        
        <div class="row justify-content-md-center">
            
            <div class="col-8 mt-1">
                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" 
                class="img-fluid rounded shadow mx-auto d-block" width="25%" height="25%"  alt="...">

                <div class="card text-center shadow mb-5 bg-white rounded">
                    
                    <div class="card-body">
                         <ul class="list-group list-group-flush">

                            <li class="list-group-item text-muted">
                                <% if @user.admin? %>
                                    Admin
                                <% else %>
                                    Customer
                                <% end %>
                                </li>
                            
                            <li class="list-group-item"><b>Email: </b> <%= @user.email %> </li>
                            
                        </ul>

                        <% if logged_in? && current_user.id == @user.id %>
                            <%= link_to "Edit Your Profile", edit_user_path(@user), class: "btn btn-outline-info" %>

                            <%= link_to 'Delete Profile',user_path(@user), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you Sure?"} %>
                        <% end %>
                    </div>
                    <div class="card-footer text-muted">
                        <small>
                            Joined <%= time_ago_in_words(@user.created_at)%> ago
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
<</div>



